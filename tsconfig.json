{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "./Assets/Gen/Typing/csharp",
    ],
    "paths": {
      "@/*": [
        "Assets/*",
      ]
    },
    "lib": [
      "esnext",
      "scripthost"
    ]
  },
  "include": [
    "Assets/**/*.ts",
    "Assets/Game/**/*",
    "Assets/System/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
}
